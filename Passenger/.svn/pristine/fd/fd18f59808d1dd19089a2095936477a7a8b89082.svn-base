<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="android:spinnerDropDownItemStyle">@style/paymentMethodSpinnerStyle</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:spinnerDropDownItemStyle">@style/paymentMethodSpinnerStyle</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyListBackContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/friend_list_holdar</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="MyListFrontContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/background_front</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CardListBackContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#ffffff</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="CardListFrontContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="paymentMethodSpinnerStyle" parent="android:Widget.Spinner.DropDown">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>