<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nc_pin_bg"
    android:duplicateParentState="true"
    android:gravity="center_vertical"
    android:splitMotionEvents="false" >

    <LinearLayout
        android:id="@+id/linear_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_view_enter_pin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:splitMotionEvents="false" >

        <EditText
            android:id="@+id/ed_txt_pin_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pin_holdar"
            android:gravity="center"
            android:imeOptions="actionPrevious"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@color/blue"
            android:textSize="@dimen/pin_text_size"
            android:textStyle="bold" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/ed_txt_pin_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/pin_holdar"
            android:gravity="center"
            android:imeOptions="actionPrevious"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@color/blue"
            android:textSize="@dimen/pin_text_size"
            android:textStyle="bold" >
        </EditText>

        <EditText
            android:id="@+id/ed_txt_pin_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/pin_holdar"
            android:gravity="center"
            android:imeOptions="actionPrevious"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@color/blue"
            android:textSize="@dimen/pin_text_size"
            android:textStyle="bold" >
        </EditText>

        <EditText
            android:id="@+id/ed_txt_pin_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pin_holdar"
            android:gravity="center"
            android:imeOptions="actionPrevious"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@color/blue"
            android:textSize="@dimen/pin_text_size"
            android:textStyle="bold" >
        </EditText>
    </LinearLayout>

    <com.netcabs.customview.NetCabsTextView
        android:id="@+id/txt_view_pin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:duplicateParentState="true"
        customview:fontName="HELSH__.TTF" >
    </com.netcabs.customview.NetCabsTextView>

    <com.netcabs.customview.NetCabsTextView
        android:id="@+id/txt_view_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:duplicateParentState="true"
        android:text="Welcome back"
        android:textColor="@color/darkred"
        android:textSize="@dimen/welcome_text_size"
        customview:fontName="olivier_demo.ttf" />

    <com.netcabs.customview.NetCabsTextView
        android:id="@+id/txt_view_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_view_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:duplicateParentState="true"
        android:text="Enter your pincode"
        android:textStyle="bold"
        android:textColor="@color/black"
        customview:fontName="HELSH__.TTF" />

    <com.netcabs.customview.NetCabsTextView
        android:id="@+id/txt_view_enter_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_view_user_name"
        android:layout_centerHorizontal="true"
        android:duplicateParentState="true"
        android:text="please enter your PIN"
        android:textColor="@color/warmgray11"
        customview:fontName="HELSH__.TTF" />

    <com.netcabs.customview.NetCabsTextView
        android:id="@+id/txt_view_lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:duplicateParentState="true"
        android:text=""
        android:textColor="@color/warmgray11"
        customview:fontName="HELSH__.TTF" />

    <com.netcabs.customview.NetCabsTextView
        android:id="@+id/txt_view_lost_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_view_lost"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:duplicateParentState="true"
        android:text="@string/click_here"
        android:textColor="@color/darkred"
        customview:fontName="HELSH__.TTF" />

</RelativeLayout>